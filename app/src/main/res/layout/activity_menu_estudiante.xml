<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.menu_estudiante">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.539"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="20sp"
            android:text="Estudiante"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_hacerse_colaborador"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/blue"
            android:text="Hacerse colaborador"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button_ver_eventos"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/blue"
            android:text="Ver Eventos"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button_inscripciones"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/blue"
            android:text="Inscripciones"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button_evaluar_evento"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/blue"
            android:text="Evaluar Evento"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button_crear_propuesta"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/blue"
            android:text="Crear Propuesta"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button_foro"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/blue"
            android:text="Foro"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button_cerrar_sesion"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/blue"
            android:text="Cerrar sesion"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>