<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="110dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.108"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="20sp"
            android:text="Menu"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_iniciar_sesion"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginStart="32dp"
            android:layout_marginVertical="5dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/blue"
            android:text="Iniciar SesiÃ³n"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/button_crear_asociacion"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginStart="32dp"
            android:layout_marginVertical="5dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/blue"
            android:text="Crear asociacion"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/button_asociaciones"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginStart="32dp"
            android:layout_marginVertical="5dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/blue"
            android:text="Asociaciones"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/button_registrar_colaborador"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginStart="32dp"
            android:layout_marginVertical="5dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/blue"
            android:text="Registrar colaborador"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/button_eventos"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginStart="32dp"
            android:layout_marginVertical="5dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/blue"
            android:text="Eventos"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/button_registrar_eventos"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginStart="32dp"
            android:layout_marginVertical="5dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/blue"
            android:text="Registrar Eventos"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/button_calendario_eventos"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginStart="32dp"
            android:layout_marginVertical="5dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/blue"
            android:text="Calendario Eventos"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/button_Foro"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginStart="32dp"
            android:layout_marginVertical="5dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/blue"
            android:text="Foros"
            android:textColor="@color/white" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>