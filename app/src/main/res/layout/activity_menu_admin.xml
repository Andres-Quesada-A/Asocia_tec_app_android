<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.menu_admin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="110dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.721"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="20sp"
            android:text="Administrador"
            android:textAlignment="center"
            android:textColor="@color/blue"
            android:textSize="40sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_asociaciones"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/blue"
            android:text="Asociaciones"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button_estudiantes"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/blue"
            android:text="Estudiantes"
            android:textColor="@color/white" />


        <Button
            android:id="@+id/button_eventos"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/blue"
            android:text="Eventos"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button_colaboradores"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/blue"
            android:text="Colaboradores"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button_foro"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/blue"
            android:text="Foro"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button_cerrar_sesion"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="@color/blue"
            android:text="Cerrar Sesion"
            android:textColor="@color/white" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>